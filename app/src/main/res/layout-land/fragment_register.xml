<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="234dp"
            android:fontFamily="monospace"
            android:text="REGISTER"
            android:textColor="#FF9800"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="329dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:textColorHint="#CB00EF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="80dp"
            android:background="#D3F389"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxTerms"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/checkBoxTerms"
            android:layout_width="255dp"
            android:layout_height="48dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="82dp"
            android:background="#BFBEF4"
            android:fontFamily="monospace"
            android:text="I Accept All Terms and Conditions"
            android:textColor="#CB00EF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextName"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="UnknownId,TextContrastCheck" />

        <EditText
            android:id="@+id/editTextPass"
            android:layout_width="328dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#CB00EF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="329dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#CB00EF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="76dp"
            android:layout_marginStart="231dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/register" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>