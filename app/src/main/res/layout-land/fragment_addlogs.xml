<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="logViewModel"
            type="project.stN991536967.snehal.viewModel.AddLogViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/input3"
        app:layout_constraintTop_toBottomOf="@+id/input3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:text="Add Exercise"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateField"
            android:layout_width="275dp"
            android:layout_height="68dp"
            android:layout_marginStart="36dp"

            android:layout_marginTop="32dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Date"
            android:inputType="date"
            android:textColorHint="#E91E63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextExercise"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/editTextExercise"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:hint="Enter the Exercise"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#E91E63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/description"
            android:layout_width="341dp"
            android:layout_height="161dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="48dp"
            android:background="#BFBEF4"
            android:ems="10"
            android:gravity="start|top"
            android:hint="exercise"
            android:inputType="textMultiLine"
            android:textColorHint="#E91E63"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dateField"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="250sp"
            android:layout_height="60sp"

            android:layout_marginTop="15dp"
            android:background="#D3F389"
            android:gravity="center"
            android:text="Add"
            android:textColor="#FF0000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>